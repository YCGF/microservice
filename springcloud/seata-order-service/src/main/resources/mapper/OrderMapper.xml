<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zy.seata.order_service.dto.OrderDao">
    <resultMap id="BaseResultMap" type="com.zy.seata.order_service.domain.Order">
        <id column="id" property="id" jdbcType="int"></id>
        <result column="user_id" property="userId" jdbcType="int"></result>
        <result column="product_id" property="productId" jdbcType="int"></result>
        <result column="count" property="count" jdbcType="int"></result>
        <result column="price" property="price" jdbcType="decimal"></result>
        <result column="status" property="status" jdbcType="int"></result>
    </resultMap>

    <insert id="create">
        insert into t_order (id, user_id, product_id, count, price, status)
        values (null, #{userId}, #{productId}, #{count}, #{price}, 0)
    </insert>

    <update id="updateStatus">
        update t_order set status = 1
        where user_id=#{userId} and status=#{status}
    </update>
</mapper>